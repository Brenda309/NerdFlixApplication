@model NerdFlixApplication.Models.DTO.RegistrationModel

@{

}

<h2 class="pb-10">Register</h2>

<form class="w-40" asp-action="Register" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="input-container">
        <label asp-for="Name" class= "w-40"></label>
        <input asp-for="Name" class="input" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="Email" class="w-40"></label>
        <input asp-for="Email" class="input" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="Username" class="w-40"></label>
        <input asp-for="Username" class="input" />
    </div>

    <div class="input-container">
        <label asp-for="Password " class="w-40"></label>
        <input asp-for="Password" type="password" class="input" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="input-container">
        <label asp-for="PasswordConfirm" class="w-40"></label>
        <input asp-for="PasswordConfirm" type="password" class="input" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

    <div class="input-container">
        <label asp-for="Role" class="w-40"></label>
        <select asp-for="Role" class="input">
            <option value="User">User</option>
            <option value="Admin">Admin</option>
        </select>
    </div>

    <button type="submit" class="btn btn-default">Register</button>
</form>

